<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.control.TreeTableColumn?>
<?import javafx.scene.control.TreeTableView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>

<BorderPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1">
   <top>
      <MenuBar BorderPane.alignment="CENTER">
        <menus>
          <Menu mnemonicParsing="false" text="File">
            <items>
              <MenuItem mnemonicParsing="false" onAction="#doOpen" text="Open" />
              <MenuItem mnemonicParsing="false" onAction="#doClose" text="Close" />
            </items>
          </Menu>
        </menus>
      </MenuBar>
   </top>
    <center>
        <BorderPane fx:id="root">
         <center>
            <TabPane tabClosingPolicy="UNAVAILABLE" BorderPane.alignment="CENTER">
              <tabs>
                  <Tab text="ROM">
                     <content>
                        <TreeTableView fx:id="tblRom" editable="true" prefHeight="200.0" prefWidth="200.0" showRoot="false">
                          <columns>
                            <TreeTableColumn fx:id="tblColOff" editable="false" prefWidth="75.0" sortable="false" text="ROM-Offset" />
                            <TreeTableColumn fx:id="tblColLbl" prefWidth="75.0" sortable="false" text="Label" />
                              <TreeTableColumn fx:id="tblColAdd" editable="false" prefWidth="95.0" sortable="false" text="SNES-Address" />
                              <TreeTableColumn fx:id="tblColVal" editable="false" prefWidth="75.0" sortable="false" text="Value" />
                              <TreeTableColumn fx:id="tblColIns" editable="false" prefWidth="75.0" sortable="false" text="Instruction" />
                              <TreeTableColumn fx:id="tblColCom" prefWidth="75.0" sortable="false" text="Comment" />
                          </columns>
                        </TreeTableView>
                     </content>
                  </Tab>
                <Tab fx:id="tabRom" text="ROM (Raw)" />
              </tabs>
            </TabPane>
         </center></BorderPane>
    </center>
   <bottom>
      <HBox BorderPane.alignment="CENTER">
         <children>
            <Label fx:id="lblFile" onMouseClicked="#doOpenFileInfos" text="File Infos">
               <cursor>
                  <Cursor fx:constant="HAND" />
               </cursor>
            </Label>
         </children>
      </HBox>
   </bottom>
</BorderPane>
